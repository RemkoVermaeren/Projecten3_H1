            <a href ng-click="ctrl.removeFood($index)"><i class="material-icons col-2">clear</i></a>
        </div>
        <div style="margin-bottom: 10px">
            <a href ng-click="ctrl.addFood()">Add ingredient</a>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</script>
<script type="text/ng-template" id="/recipe.html">
    <h1 class="text-center" ng-init="ctrl.getRecipe()">{{ctrl.recipe.name}}</h1>
    <hr>
    <div class="text-center" ng-show="!(ctrl.recipe.picture.length == 0 || !ctrl.recipe.picture)">
        <img class="img-responsive" src="{{ctrl.recipe.picture}}" alt="{{ctrl.recipe.name}}" height="200" width="200">
    </div>
    <dl class="row text-center">
        <dt class="col-6">Vegan points</dt>
        <dd class="col-6">{{ctrl.recipe.veganPoints}}</dd>
        <dt class="col-6">Type</dt>
        <dd class="col-6">{{ctrl.recipe.type}}</dd>
        <dt class="col-6">Time (minutes)</dt>
        <dd class="col-6">{{ctrl.recipe.time}}</dd>
        <dt class="col-6">Difficulty</dt>
        <dd class="col-6">{{ctrl.recipe.difficulty}}</dd>
        <dt class="col-6">Calories</dt>
        <dd class="col-6">{{ctrl.recipe.calories}}</dd>
    </dl>
    <hr>
    <div class="row">
        <div class="col">
            <h2 class="text-center">Ingredients</h2>
            <div ng-show="ctrl.recipe.food.length > 0">
                <div ng-repeat="f in ctrl.recipe.food track by $index">
                    <p class="text-center">{{f}}</p>
                </div>
            </div>
            <div ng-show="ctrl.recipe.food.length === 0">
                <p class="text-center">No ingredients</p>
            </div>
        </div>
        <div class="col">
            <h2 class="text-center">Instructions</h2>
            <div ng-show="ctrl.recipe.instructions.length > 0">
                <div ng-repeat="f in ctrl.recipe.instructions track by $index">
                    <p class="text-center">{{f}}</p>
                </div>
            </div>
            <div ng-show="ctrl.recipe.instructions.length === 0">
                <p class="text-center">No instructions</p>
            </div>
        </div>
        <div class="col">
            <h2 class="text-center">Allergies</h2>
            <div ng-show="ctrl.recipe.allergies.length > 0">
                <div ng-repeat="f in ctrl.recipe.allergies track by $index">
                    <p class="text-center">{{f}}</p>
                </div>
            </div>
            <div ng-show="ctrl.recipe.allergies.length === 0">
            <p class="text-center">No allergies</p>
            </div>
        </div>
    </div>
    <a href="#/recipes"><p class="text-center">Back to overview</p></a>
</script>

<script type="text/ng-template" id="/blogs.html">
    <h1>Blogs</h1>
    <hr>
    <div class="table-responsive" ng-hide="ctrl.isBlogsEmpty()">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Points
                </th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="blog in ctrl.blogs">
                <td><a href="#/blogs/{{blog._id}}">{{blog.name}}</a></td>
                <td>{{blog.veganPoints}}</td>
                <td>
                    <a href="#/blogs/{{blog._id}}/edit"><i class="material-icons md-18">settings</i></a>
                </td>
                <td><i class="material-icons md-18" ng-click="ctrl.deleteBlog(blog)">delete</i></td>
            </tr>
            </tbody>
        </table>
    </div>
    <div ng-show="ctrl.isBlogsEmpty()">
        <p class="text-center">No blogs available.</p>
    </div>
    <div class="text-center">
        <a href="#/newblog" class="align-top"><i class="material-icons md-18">add</i>Add new blog</a>
    </div>
</script>
<script type="text/ng-template" id="/modifyblog.html">
    <h1>Modify Blog</h1>
    <hr>
    <form ng-submit="ctrl.modifyBlog()" ng-init="ctrl.getBlog()">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" placeholder="Ex. Eat vegan in 7 steps" ng-model="ctrl.blog.name"
                   required/>
        </div>
        <div class="form-group">
            <label>Vegan Points</label>
            <input type="number" min="0" class="form-control" placeholder="Ex. 50" ng-model="ctrl.blog.veganPoints"
                   required/>
        </div>
        <div class="form-group">
            <label>Author</label>
            <input type="text" class="form-control" placeholder="Ex. James Clarke" ng-model="ctrl.blog.author"
                   required/>
        </div>
        <div class="form-group">
            <label>Website</label>
            <input type="url" class="form-control" placeholder="http://www.localhost.com" ng-model="ctrl.blog.website"
                   required/>
        </div>
        <div class="form-group">
            <label>Date</label>
            <input type="date" class="form-control" ng-model="ctrl.blog.date" required/>
        </div>
        <div class="form-group">
            <label>Picture</label>
            <input type="file" name="image" ng-file-model="ctrl.image" accept="image/*" ngf-max-size="50MB"
                   ngf-min-height="100"
                   ngf-resize="{width: 100, height: 100}" class="form-control-file">
        </div>
        <div ng-show="!(ctrl.blog.picture.length == 0 || !ctrl.blog.picture)" style="margin-bottom: 10px">
            <img src="{{ctrl.blog.picture}}" alt="{{ctrl.blog.name}}" height="200" width="200">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</script>
